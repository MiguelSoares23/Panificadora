package models;


import java.util.List;

public class Funcionario extends Pessoa {
    private int idFuncionario;
    private String cargo;
    private float salario;
    private List<Cliente> clientesAtendidos;

    public Funcionario(int idFuncionario, String nome, String cargo, float salario, List<Cliente> clientesAtendidos) {
        super(nome);
        this.idFuncionario = idFuncionario;
        this.cargo = cargo;
        this.salario = salario;
        this.clientesAtendidos = clientesAtendidos;
    }


    public String getCargo() {
        return this.cargo;
    }

    public void setCargo(String cargo) {
        this.cargo = cargo;
    }

    public Float getSalario() {
        return this.salario;
    }

    public void setSalario(Float salario) {
        this.salario = salario;
    }

    public List<Clientes> getClientesAtendidos() {
        return this.clientesAtendidos;
    }

    public void setClientesAtendidos(List<Clientes> clientesAtendidos) {
        this.clientesAtendidos = clientesAtendidos;
    }

    @Override
    public void exibirDados() {
        System.out.println("Funcionario: " + getNome() + " | Cargo: " + cargo + " | Sal√°rio: " + salario);
    }

    public void registrarVenda(Cliente cliente, Produto produto, int qtd) {
    System.out.println("Venda registrada: " + produto.getNome() + " x" + qtd + " para " + cliente.getNome());
}

}